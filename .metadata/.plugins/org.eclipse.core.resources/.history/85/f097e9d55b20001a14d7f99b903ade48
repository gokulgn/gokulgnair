{
char a[50];
char g[50]="Greetings ";
int b;
int c;
printf("Enter your name\n");
scanf("%s",a);
strcat(g,a);
x=strlen(a);
c=b+16;
for(int i=0;i<c;i++)   /* first line */
{
printf("*");
}
printf("\n");
printf("*");       /* second line */
    for(int i=0;i<c-2;i++)
{
printf(" ");
}
        printf("*\n");
printf("*  ");
printf("%s",g);
printf("  *\n");
printf("*");       /* third line */
for(int i=0;i<c-2;i++)
{
printf(" ");
}
   printf("*\n");
    for(int i=0;i<c;i++)   /* fourth line */
{
printf("*");
}

