#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int age;
	char name,days;
	int month;

printf("enter your name:");
scanf("%s",&name);
printf("enter your age :");
scanf("%d", &age);
if(age>=18)
{
	printf("you are eligible for benefits");
}
else
{
printf("sorry,you are not eligible for benefits ");
}
printf("\nplease enter the month you born (in number 01-12)?");
scanf("%d",&month);
if ("month==1 ||  month==2")
{
printf("you can apply on mondays", &days);
}
else  ("month==3 ||  month ==4")
	{
		printf("you can apply on thursdsays",days);
}

	return 0;
}
